<!DOCTYPE html>
<html>
  <head>
    <title>Todoist</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body data-controller="base" data-action="resize@window->base#watchBodyWidth">
    <% if current_user %>
      <%= render "layouts/flash" %>
      <%= render "layouts/app_bar" %>
      <%= render "layouts/menu" %>
    <% end %>
    <main>
      <%= yield %>
    </main>
  </body>
</html>
