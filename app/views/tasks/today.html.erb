<div class="today">
  <h1>
    Today
  </h1>

  <% if @overdue_tasks.any? %>
    <h2>Overdue</h2>
    <%= render @overdue_tasks %>
  <% end %>

  <h2>
    <%= Time.now.strftime("%-d %b %A") %>
  </h2>

  <%= turbo_frame_tag "tasks" do %>
    <%= render @today_tasks %>
  <% end %>

  <%= render 'new_task_link', project_id: inbox_id, selected_date: Date.today %>
</div>
