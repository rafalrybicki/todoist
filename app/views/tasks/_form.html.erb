<%= form_with class: "task-form", model: [@project, @task] do |form|%>
  <% @task.errors.full_messages.each do |message| %>
    <div><%= message %></div>
  <% end %>

  <%= form.text_field :content, autofocus: true, class: "task-form__content-input", autocomplete: "off" %>

  <%= form.date_select :target_date %>

  <button type="button" class="selector project-selector">project</button>
  <button type="button" class="selector date-selector">date</button>

  <%= link_to 'Cancel', @project, class: "btn btn--cancel" %>

  <%= form.submit "Add task", class: "btn btn--submit" %>
<% end %>
