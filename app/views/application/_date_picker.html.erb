<div class="date-picker">
  <ul>
    <li class="suggestion">
      <%= bootstrap_icon "calendar", height: 15, color: "black" %>
      Today 
      <span class="weekday">
        <%= Time.now.strftime('%a')%>
      </span>
    </li>
    <li class="suggestion">
      <%= bootstrap_icon "sun-fill", height: 17, color: "orange" %>
      Tomorrow
      <span class="weekday">
        <%= Time.now.tomorrow.strftime('%a')%>
      </span>
    </li>
    <li class="suggestion">
      <%= bootstrap_icon "house-fill", height: 16, color: "blue" %>
      This weekend
      <span class="weekday">
        Sat
      </span>
    </li>
    <li class="suggestion">
      <%= bootstrap_icon "skip-forward-fill", height: 15, color: "green" %>
      Next week
      <span class="weekday">
        <%= Time.now.next_week.strftime('%a %-d %b')%>
      </span>
    </li>
    <li class="suggestion">
      <%= bootstrap_icon "slash-circle", height: 16, color: "grey" %>
      No date
    </li>
  </ul>
  <div data-controller="picker" data-action="click->picker#changeMonth">
    <button type="button" data-value="prev">prev</button>
    <button type="button" data-value="reset">reset</button>
    <button type="button" data-value="next">next</button>
  </div>
  <div class="calendar">
    <div id="calendar-title">
      <%= Date.today.strftime('%B %Y')%>
    </div>
    <div id="calendar-month" class="calendar-month" data-controller="picker" data-action="click->picker#selectDate">
      <%# there will be month generated by JavaScript %>
    </div>
  </div>
</div>
