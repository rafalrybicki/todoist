<div class="date-picker">
  <ul>
    <li class="suggestion">
      <%= bootstrap_icon "calendar", height: 15, color: "black" %>
      Today 
      <span class="weekday">
        <%= Time.now.strftime('%a')%>
      </span>
    </li>
    <li class="suggestion">
      <%= bootstrap_icon "sun-fill", height: 17, color: "orange" %>
      Tomorrow
      <span class="weekday">
        <%= Time.now.tomorrow.strftime('%a')%>
      </span>
    </li>
    <li class="suggestion">
      <%= bootstrap_icon "house-fill", height: 16, color: "blue" %>
      This weekend
      <span class="weekday">
        Sat
      </span>
    </li>
    <li class="suggestion">
      <%= bootstrap_icon "skip-forward-fill", height: 15, color: "green" %>
      Next week
      <span class="weekday">
        <%= Time.now.next_week.strftime('%a %-d %b')%>
      </span>
    </li>
    <li class="suggestion">
      <%= bootstrap_icon "slash-circle", height: 16, color: "grey" %>
      No date
    </li>
  </ul>
  <div class="calendar">
    <div id="calendar-title" class="calendar__title">
      <%= Date.today.strftime('%B %Y')%>
    </div>
    <div class="calendar__actions"
         data-controller="picker"
         data-action="click->picker#changeMonth">
      <button id="prev-month"
              type="button"
              data-value="prev"
              disabled="true">
        <%= bootstrap_icon "chevron-left", height: 11 %>
      </button>
      <button id="reset-month"
              type="button"
              data-value="reset"
              disabled="true">
        <%= bootstrap_icon "circle", height: 9 %>
      </button>
      <button id="next-month"
              type="button"
              data-value="next">
        <%= bootstrap_icon "chevron-right", height: 11 %>
      </button>
    </div>
    <div class="calendar__week-days">
      <span>M</span>
      <span>T</span>
      <span>W</span>
      <span>T</span>
      <span>F</span>
      <span>S</span>
      <span>S</span>
    </div>
    <div id="calendar-month"
         class="calendar__month"
         data-controller="picker"
         data-action="click->picker#selectDate">
      <%# there will be month generated by JavaScript %>
    </div>
  </div>
</div>
